
<% if @cart.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart.each do |item| %>
        <% product = Product.find(item['product_id']) %>
        <tr>
          <td><%= product.name %></td>
          <td><%= item['quantity'] %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= number_to_currency(product.price * item['quantity']) %></td>
          <td><%= link_to 'Remove', remove_from_cart_orders_path(product_id: item['product_id']), method: :delete, remote: true %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h2>Total: <%= number_to_currency(@cart.sum { |item| Product.find(item['product_id']).price * item['quantity'] }) %></h2>
<% end %>
